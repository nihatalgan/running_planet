  <body style="padding: 0px;">

    <header
      class="bg-body-tertiary d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-3 border ps-4 pe-4"
    >

      <div class="col-12 col-md-6 mb-2 mb-md-0">
        <a class="navbar-brand d-flex align-items-center" href="/"><img
            src="/images/images.jpg"
            alt="Logo"
            width="30"
            height="24"
            class="me-1"
          /><p class="lead my-0 text-body-secondary">Running Planet</p></a>
      </div>

      <div class="col-12 col-md-6 text-end">
        <a class="btn btn-link me-3" href="/event/list">Events</a>
        {{#if hasLoggedIn}}
          <a
            href="/user/profile"
            class="mr-3 btn btn-primary btn-sm me-3 px-4"
          >Profile</a>
          <a
            href="/auth/logout"
            class="btn btn-outline-primary btn-sm px-4"
          >Logout</a>
        {{else}}
          <a
            href="/auth/login"
            class="mr-3 btn btn-outline-primary btn-sm me-3 px-4"
          >Login</a>
          <a href="/auth/signup" class="btn btn-primary btn-sm px-4">Signup</a>
        {{/if}}
      </div>

    </header>

